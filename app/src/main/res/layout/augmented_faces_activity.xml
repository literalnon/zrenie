<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainer">

  <fragment android:name="com.example.zrenie20.augmentedFace.augmentedfaces.FaceArFragment"
      android:id="@+id/mArFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivChangeVisibility"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_change_visibility" />


  <include
      layout="@layout/layout_focus"
      android:id="@+id/llFocus"
      android:layout_height="match_parent"
      android:layout_width="match_parent"/>

  <include
      layout="@layout/layout_main_activities"
      android:visibility="gone"
      android:id="@+id/llMainActivities"
      android:layout_height="match_parent"
      android:layout_width="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>